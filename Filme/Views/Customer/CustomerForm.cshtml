@model Filme.Core.ViewModels.MembershipTypesViewModel
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:wheat;">Customer form</h2>

@using (Html.BeginForm("Save", "Customer"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @*@Html.LabelFor(m => m.Customers.Name)*@
        <h4><span class="label label-warning">Name</span></h4>
        @Html.TextBoxFor(m => m.Customers.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customers.Name)
    </div>


    <div class="datepicker">
        @*@Html.LabelFor(m => m.Customers.Birthdate)*@
        <h4><span class="label label-warning">Birthdate</span></h4>
        @Html.EditorFor(m => m.Customers.Birthdate, new { @class = "datepicker" })
        @Html.ValidationMessageFor(m => m.Customers.Birthdate)
    </div>

    <div class="form-group">
        @*@Html.LabelFor(m => m.Customers.MembershipTypeId)*@
        <h4><span class="label label-warning">Membership</span></h4>
        @Html.DropDownListFor(m => m.Customers.MembershipTypeId, new SelectList(Model.MembershipType, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customers.MembershipTypeId)
    </div>

    <div class="form-group">
        <h4><span class="label label-warning">Address</span></h4>
        @Html.TextAreaFor(m => m.Customers.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customers.Address)
    </div>


   
    <div>
        <div class="form-check">
            <label class="form-check-label" style="background-color: #282d2c54; color:wheat; border-radius: 3px; padding: 5px;">
                @Html.CheckBoxFor(m => m.Customers.IsSubscribedToNewsLetter)
                <b style="padding: 5px;">Subscribe to Movies</b>
            </label>
        </div>
    </div>
    @Html.HiddenFor(m => m.Customers.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @*@Scripts.Render("~/bundles/jqueryval") - client side validation*@

    <style>
        body {
            color: black;
        }
    </style>

}