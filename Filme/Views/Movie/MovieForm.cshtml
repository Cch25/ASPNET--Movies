@model Filme.Core.ViewModels.GenreMovieViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:wheat">@Model.Title</h2>

@using (Html.BeginForm("Save", "Movie"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @*@Html.LabelFor(m => m.Movies.Name)*@
        <h4><span class="label label-warning">Name</span></h4>
        @Html.TextBoxFor(m => m.Movies.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movies.Name)
    </div>
    <div class="form-group">
        @*@Html.LabelFor(m => m.Movies.ReleaseDate)*@
        <h4><span class="label label-warning">Release date</span></h4>
        @Html.EditorFor(m => m.Movies.ReleaseDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movies.ReleaseDate)
    </div>
    <div class="form-group">
        @*@Html.LabelFor(m => m.Movies.GenreId)*@  <h4><span class="label label-warning">Genre</span></h4>
        @Html.DropDownListFor(m => m.Movies.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Choose genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movies.GenreId)
    </div>
    <div class="form-group">
        @*@Html.LabelFor(m => m.Movies.NumberInStock)*@ <h4><span class="label label-warning">Number in stock</span></h4>
        @Html.TextBoxFor(m => m.Movies.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movies.NumberInStock)
    </div>
    <div class="form-group">
        @*@Html.LabelFor(m => m.Movies.AvailableInStock)*@
        <h4><span class="label label-warning">Description</span></h4>
        @Html.TextAreaFor(m => m.Movies.Description, new { @class = "form-control " })
        @Html.ValidationMessageFor(m => m.Movies.Description)
    </div>
    @*<div class="form-group">*@
        @*<h4><span class="label label-danger">Available in stock</span></h4>
        @Html.TextBoxFor(m => m.Movies.AvailableInStock, new { @class = "form-control ", @readonly = "readonly", disabled = "disabled" })
        @Html.ValidationMessageFor(m => m.Movies.AvailableInStock)
    </div>*@ 
    @*@Html.HiddenFor(m => m.Movies.Id)*@
    @Html.Hidden("Movies.Id", Model.Movies?.Id ?? 0)
    @Html.AntiForgeryToken()
    <button class="btn btn-primary">Save</button>
}
@section scripts
    {
    @Scripts.Render("~/bundles/jqueryval")
}