@model IEnumerable<Filme.Core.Models.Movie>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie List</h2>

@*@Html.ActionLink("New movie", "Edit", "Movie", new { @class = "btn btn-primary btn-add-movies" })*@

<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Movie</td>
            <td>Genre</td>
        </tr>
    </thead>
</table>

@section scripts
{
    <style>
        body {
            background: none;
        }
    </style>

    <script>
        $(document).ready(function () {

            var table = $("#movies").DataTable({
                ajax: {
                    url: '/api/movies',
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href=/movie/details/" + movie.id + ">" + movie.name + "</a>";
                        }
                    },
                    {
                        data: "genre.name"
                    },

                ]

            });
        });

    </script>
}
